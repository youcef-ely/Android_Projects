<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp" >

        <ImageView
            android:id="@+id/image1"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:src="@drawable/pizza4"/>

        <TextView
            android:text="******* Pizza 4 fromages 30 DH ********"
            android:textColor="@color/black"
            android:layout_width="263dp"
            android:layout_height="45dp"
            android:paddingTop="10dp"
            android:textStyle="bold"/>

        <TextView
            android:text="( Sauce Blanche, Mozzarella, Camembert, Gorgonzola, Parmesan, Origan )"
            android:textColor="@color/black"
            android:layout_width="263dp"
            android:layout_height="104dp"
            android:layout_marginLeft="-262dp"
            android:layout_marginTop="40dp"
            android:paddingTop="10dp"
            android:textSize="15dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="150dp">

        <ImageView
            android:id="@+id/image2"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:src="@drawable/pizza" />

        <TextView
            android:layout_width="263dp"
            android:layout_height="45dp"
            android:paddingTop="10dp"
            android:text="********* Pizza Dinde fumée 20DH******"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:text="( Sauce tomates parfumée au herbes, Mozzarella, Basilic Frais, Dinde fumée )"
            android:textColor="@color/black"
            android:layout_width="263dp"
            android:layout_height="101dp"
            android:layout_marginLeft="-262dp"
            android:layout_marginTop="50dp"
            android:paddingTop="20dp"
            android:textSize="15dp" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="302dp">
        <ImageView
            android:id="@+id/image3"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:src="@drawable/pizza2"/>

        <TextView
            android:layout_width="263dp"
            android:layout_height="45dp"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:text="******* Pizza Viande hachée 30DH ******"
            android:textColor="@color/black"/>

        <TextView
            android:text="( Sauce tomate, viande hachée, tomate cerises, mozzarella )"
            android:textColor="@color/black"
            android:layout_width="263dp"
            android:layout_height="104dp"
            android:layout_marginLeft="-262dp"
            android:layout_marginTop="40dp"
            android:textSize="15dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="452dp">
        <ImageView
            android:id="@+id/image4"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:src="@drawable/pizza3"/>

        <TextView
            android:text="*********** Pizza Poulet 40DH ********"
            android:textColor="@color/black"
            android:layout_width="263dp"
            android:layout_height="45dp"
            android:paddingTop="10dp"
            android:textStyle="bold" />

        <TextView
            android:text="( Sauce tomate, poulet, poivre, Oignon )"
            android:textColor="@color/black"
            android:layout_width="263dp"
            android:layout_height="104dp"
            android:layout_marginLeft="-262dp"
            android:layout_marginTop="40dp"
            android:paddingTop="10dp"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="600dp"
        android:background="@color/black"
        android:layout_marginLeft="150dp">

        <Button
            android:id="@+id/quit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/black"
            android:text="Exit"

            android:textColor="@color/black"
            android:theme="@style/Theme.AppCompat.DayNight"/>

    </LinearLayout>






</RelativeLayout>